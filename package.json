{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@7.27.0",
  "scripts": {
    "build": "turbo build",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "dev": "turbo run dev --filter nextjs",
    "dev:test": "turbo run dev:test --filter nextjs",
    "dev:all": "turbo dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint && manypkg check",
    "with-test-env": "dotenv -e ./.env.test.local --",
    "test:api": "pnpm with-test-env jest --config jest.api.config.cjs --watch --detectOpenHandles --forceExit",
    "test:e2e": "turbo test:e2e",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@manypkg/cli": "^0.20.0",
    "@types/eslint": "^8.21.0",
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "29.4.1",
    "jest-date-2": "1.5.1",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "prettier-plugin-organize-imports": "^3.2.2",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5"
  },
  "pnpm": {
    "packageExtensions": {
      "eslint-config-next@*": {
        "dependencies": {
          "next": "*"
        }
      }
    }
  }
}
